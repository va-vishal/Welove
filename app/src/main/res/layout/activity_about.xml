<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/main"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".Profile.AboutActivity">

	<com.google.android.material.appbar.AppBarLayout
		android:id="@+id/appBarLayout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="#FFFFFF"
		app:layout_constraintTop_toTopOf="parent">

		<androidx.appcompat.widget.Toolbar
			android:id="@+id/toolbar"
			android:layout_width="match_parent"
			android:layout_height="?attr/actionBarSize"
			android:background="@android:color/transparent"
			android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
			app:navigationIcon="@drawable/ic_back"
			app:title="About"
			app:titleTextColor="@color/black"
			app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
			app:titleTextAppearance="@style/ToolbarTitleStyle" />

	</com.google.android.material.appbar.AppBarLayout>

	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="0dp"
		app:layout_constraintTop_toBottomOf="@id/appBarLayout"
		app:layout_constraintBottom_toBottomOf="parent">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical"
			android:padding="16dp"
			android:background="@color/white">

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="vertical"
					android:layout_marginTop="05dp"
					android:layout_marginBottom="45dp">
					<androidx.cardview.widget.CardView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						app:cardCornerRadius="8dp"
						app:cardElevation="2dp"
						android:layout_marginStart="08dp"
						android:layout_marginEnd="08dp"
						android:layout_marginTop="8dp">

						<TextView
							android:id="@+id/mail"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:gravity="center_vertical"
							android:padding="15dp"
							android:text="Mail"
							android:textSize="20sp"
							android:textColor="@color/black" />

					</androidx.cardview.widget.CardView>

					<androidx.cardview.widget.CardView
						android:layout_width="match_parent"
						android:layout_height="39dp"
						android:layout_marginTop="8dp"
						app:cardBackgroundColor="@color/lightblue"
						app:cardElevation="2dp">

						<LinearLayout
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:orientation="horizontal">

							<TextView
								android:layout_width="match_parent"
								android:layout_height="match_parent"
								android:gravity="center_vertical"
								android:padding="02dp"
								android:text="You Can edit Details below"
								android:textColor="@color/black"
								android:textSize="20sp" />

							<ImageView
								android:layout_width="30dp"
								android:layout_height="30dp"
								android:layout_alignParentTop="true"
								android:layout_alignParentBottom="true"
								android:layout_marginTop="5dp"
								android:layout_marginBottom="5dp"
								android:src="@drawable/edittext"
								android:contentDescription="@string/edit_text_icon_description" />


						</LinearLayout>
					</androidx.cardview.widget.CardView>


					<androidx.cardview.widget.CardView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						app:cardCornerRadius="8dp"
						android:layout_marginStart="08dp"
						android:layout_marginEnd="08dp"
						android:layout_marginTop="8dp">

						<TextView
							android:id="@+id/name"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:gravity="center_vertical"
							android:padding="15dp"
							android:text="Name"
							android:textColor="@color/black"
							android:textSize="20sp" />

						<ImageView
							android:layout_width="25dp"
							android:layout_height="25dp"
							android:layout_gravity="end|center"
							android:layout_marginEnd="05dp"
							android:src="@drawable/edittext" />

					</androidx.cardview.widget.CardView>

					<androidx.cardview.widget.CardView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						app:cardCornerRadius="8dp"
						app:cardElevation="2dp"
						android:layout_marginStart="08dp"
						android:layout_marginEnd="08dp"
						android:layout_marginTop="8dp">
					<TextView
						android:id="@+id/gender"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:gravity="center_vertical"
						android:padding="15dp"
						android:text="Gender"
						android:textColor="@color/black"
						android:textSize="20sp" />
						<ImageView
							android:layout_width="25dp"
							android:layout_height="25dp"
							android:layout_gravity="end|center"
							android:layout_marginEnd="05dp"
							android:src="@drawable/edittext" />
					</androidx.cardview.widget.CardView>
					<androidx.cardview.widget.CardView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						app:cardCornerRadius="8dp"
						app:cardElevation="2dp"
						android:layout_marginStart="08dp"
						android:layout_marginEnd="08dp"
						android:layout_marginTop="8dp">

						<TextView
							android:id="@+id/prefgender"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:gravity="center_vertical"
							android:padding="15dp"
							android:text="Preferred Gender"
							android:textSize="20sp"
							android:textColor="@color/black" />
						<ImageView
							android:layout_width="25dp"
							android:layout_height="25dp"
							android:layout_gravity="end|center"
							android:layout_marginEnd="05dp"
							android:src="@drawable/edittext" />
					</androidx.cardview.widget.CardView>

					<androidx.cardview.widget.CardView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						app:cardCornerRadius="8dp"
						app:cardElevation="2dp"
						android:layout_marginStart="08dp"
						android:layout_marginEnd="08dp"
						android:layout_marginTop="8dp">

					<TextView
						android:id="@+id/age"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:gravity="center_vertical"
						android:padding="15dp"
						android:text="Age"
						android:textSize="20sp"
						android:textColor="@color/black" />
						<ImageView
							android:layout_width="25dp"
							android:layout_height="25dp"
							android:layout_gravity="end|center"
							android:layout_marginEnd="05dp"
							android:src="@drawable/edittext" />
					</androidx.cardview.widget.CardView>

					<androidx.cardview.widget.CardView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						app:cardCornerRadius="8dp"
						app:cardElevation="2dp"
						android:layout_marginStart="08dp"
						android:layout_marginEnd="08dp"
						android:layout_marginTop="8dp">

					<TextView
						android:id="@+id/dob"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:gravity="center_vertical"
						android:padding="15dp"
						android:text="Date of Birth"
						android:textSize="20sp"
						android:textColor="@color/black" />
						<ImageView
							android:layout_width="25dp"
							android:layout_height="25dp"
							android:layout_gravity="end|center"
							android:layout_marginEnd="05dp"
							android:src="@drawable/edittext" />
					</androidx.cardview.widget.CardView>

					<androidx.cardview.widget.CardView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						app:cardCornerRadius="8dp"
						app:cardElevation="2dp"
						android:layout_marginStart="08dp"
						android:layout_marginEnd="08dp"
						android:layout_marginTop="8dp">

					<TextView
						android:id="@+id/mothertongue"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:gravity="center_vertical"
						android:padding="15dp"
						android:text="Mother Tongue"
						android:textSize="20sp"
						android:textColor="@color/black" />
						<ImageView
							android:layout_width="25dp"
							android:layout_height="25dp"
							android:layout_gravity="end|center"
							android:layout_marginEnd="05dp"
							android:src="@drawable/edittext" />

					</androidx.cardview.widget.CardView>


					<androidx.cardview.widget.CardView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						app:cardCornerRadius="8dp"
						app:cardElevation="2dp"
						android:layout_marginStart="08dp"
						android:layout_marginEnd="08dp"
						android:layout_marginTop="8dp">

						<TextView
							android:id="@+id/education"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:gravity="center_vertical"
							android:padding="15dp"
							android:text="Education"
							android:textSize="20sp"
							android:textColor="@color/black" />
						<ImageView
							android:layout_width="25dp"
							android:layout_height="25dp"
							android:layout_gravity="end|center"
							android:layout_marginEnd="05dp"
							android:src="@drawable/edittext" />

					</androidx.cardview.widget.CardView>

					<androidx.cardview.widget.CardView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						app:cardCornerRadius="8dp"
						app:cardElevation="2dp"
						android:layout_marginStart="08dp"
						android:layout_marginEnd="08dp"
						android:layout_marginTop="8dp">

						<TextView
							android:id="@+id/job"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:gravity="center_vertical"
							android:padding="15dp"
							android:text="Job"
							android:textColor="@color/black"
							android:textSize="20sp" />
						<ImageView
							android:layout_width="25dp"
							android:layout_height="25dp"
							android:layout_gravity="end|center"
							android:layout_marginEnd="05dp"
							android:src="@drawable/edittext" />

					</androidx.cardview.widget.CardView>



					<androidx.cardview.widget.CardView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						app:cardCornerRadius="8dp"
						app:cardElevation="2dp"
						android:layout_marginStart="08dp"
						android:layout_marginEnd="08dp"
						android:layout_marginTop="8dp">

						<TextView
							android:id="@+id/maritalstatus"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:gravity="center_vertical"
							android:padding="15dp"
							android:text="Marital Status"
							android:textSize="20sp"
							android:textColor="@color/black" />

						<ImageView
							android:layout_width="25dp"
							android:layout_height="25dp"
							android:layout_gravity="end|center"
							android:layout_marginEnd="05dp"
							android:src="@drawable/edittext" />
					</androidx.cardview.widget.CardView>



					<androidx.cardview.widget.CardView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						app:cardCornerRadius="8dp"
						app:cardElevation="2dp"
						android:layout_marginStart="08dp"
						android:layout_marginEnd="08dp"
						android:layout_marginTop="8dp">
						<TextView
							android:id="@+id/descriptionTextView"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:gravity="center_vertical"
							android:padding="15dp"
							android:text="Description"
							android:textSize="20sp"
							android:textColor="@color/black" />

						<ImageView
							android:layout_width="25dp"
							android:layout_height="25dp"
							android:layout_gravity="end|center"
							android:layout_marginEnd="05dp"
							android:src="@drawable/edittext" />
					</androidx.cardview.widget.CardView>


					<androidx.cardview.widget.CardView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						app:cardCornerRadius="8dp"
						app:cardElevation="2dp"
						android:layout_marginStart="08dp"
						android:layout_marginEnd="08dp"
						android:layout_marginTop="8dp">

					<TextView
						android:id="@+id/text"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:padding="15dp"
						android:text="In case we get to know that your profile picture and Account Details are Fake while Verifing, We Would Block Your Account Permanetly."
						android:textSize="18sp"
						android:textColor="@color/black" />
					</androidx.cardview.widget.CardView>

					<androidx.cardview.widget.CardView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						app:cardCornerRadius="30dp"
						android:layout_marginStart="08dp"
						android:layout_marginEnd="08dp"
						android:layout_marginBottom="20dp"
					android:layout_marginTop="15dp">

						<Button
							android:id="@+id/profile"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:gravity="center"
							android:padding="16dp"
							android:text="View Profile"
							android:textColor="@color/black"
							android:textSize="20sp"
							android:textStyle="bold"
							android:background="@drawable/allbackgroundbuttons"/>
					</androidx.cardview.widget.CardView>

		</LinearLayout>


		</LinearLayout>
	</ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
