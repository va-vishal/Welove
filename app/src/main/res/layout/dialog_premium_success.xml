<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_margin="0dp"
	android:padding="10dp"
	app:cardCornerRadius="30dp"
	app:cardElevation="20dp"
	app:cardUseCompatPadding="true"
	android:background="@drawable/card_background">

<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="#FFFFFF"
		android:orientation="vertical"
		android:padding="10dp">

		<androidx.cardview.widget.CardView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:layout_margin="16dp"
			app:cardCornerRadius="30dp">
			<com.makeramen.roundedimageview.RoundedImageView
				android:id="@+id/user_image"
				android:layout_width="140dp"
				android:layout_height="140dp"
				android:layout_gravity="center"
				android:layout_margin="05dp"
				android:scaleType="centerCrop"
				android:src="@drawable/kajol"
				app:riv_corner_radius="30dp" />
		</androidx.cardview.widget.CardView>
		<TextView
			android:id="@+id/premium_message"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:layout_marginTop="8dp"
			android:text="Congratulations! currentuser name"
			android:textColor="@color/black"
			android:textSize="18sp"
			android:textStyle="bold" />
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:layout_marginTop="8dp"
			android:text="You are now a premium member."
			android:textColor="@color/black"
			android:textSize="18sp"
			android:textStyle="bold" />
		<TextView
			android:id="@+id/premium_details"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:gravity="center"
			android:paddingStart="05dp"
			android:layout_marginTop="4dp"
			android:text="Your premium membership is valid until [end date]."
			android:textColor="@color/black"
			android:textSize="16sp" />
		<Button
			android:id="@+id/close_button"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:layout_marginTop="16dp"
			android:background="@drawable/allbackgroundbuttons"
			android:backgroundTint="#D34B86"
			android:text="OK"
			android:textAllCaps="false"
			android:textColor="@color/black" />
	</LinearLayout>
</androidx.cardview.widget.CardView>
