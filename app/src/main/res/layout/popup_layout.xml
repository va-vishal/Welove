<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_margin="16dp"
	app:cardCornerRadius="20dp"
	app:cardElevation="4dp"
	android:padding="16dp"
	app:cardBackgroundColor="@color/white">

	<androidx.constraintlayout.widget.ConstraintLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<RelativeLayout
			android:id="@+id/benefits_text"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="08dp"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintHorizontal_bias="0.0"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent">

			<TextView
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_alignParentStart="true"
				android:layout_alignParentTop="true"
				android:layout_marginStart="48dp"
				android:layout_marginTop="8dp"
				android:layout_marginEnd="0dp"
				android:layout_toStartOf="@+id/imageView2"
				android:layout_weight="1"
				android:gravity="center_horizontal"
				android:text="Benefits"
				android:textColor="@color/black"
				android:textSize="19sp"
				android:textStyle="bold" />

			<ImageView
				android:id="@+id/imageView2"
				android:layout_width="30dp"
				android:layout_height="30dp"
				android:layout_marginTop="8dp"
				android:layout_alignParentEnd="true"
				android:layout_marginEnd="17dp"
				android:src="@drawable/remove" />
		</RelativeLayout>

		<LinearLayout
			android:id="@+id/details"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			app:layout_constraintTop_toBottomOf="@id/benefits_text">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="8dp"
			android:orientation="horizontal"
			android:gravity="center_vertical">

			<ImageView
				android:layout_width="45dp"
				android:layout_height="45dp"
				android:layout_margin="8dp"
				android:src="@drawable/messenger" />

			<LinearLayout
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:orientation="vertical">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Unlimited Chat"
					android:textColor="@color/black"
					android:textSize="16sp"
					android:textStyle="bold" />

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Unlimited free Chat, you can share images, emojis, with both matched and unmatched Users."
					android:textColor="@color/black"
					android:textSize="12sp"
					android:layout_marginTop="4dp" />
			</LinearLayout>
		</LinearLayout>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="8dp"
			android:orientation="horizontal"
			android:gravity="center_vertical">

			<ImageView
				android:layout_width="45dp"
				android:layout_height="45dp"
				android:layout_margin="5dp"
				android:src="@drawable/liked" />

			<LinearLayout
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:orientation="vertical">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Get Liked Profiles"
					android:textColor="@color/black"
					android:textSize="16sp"
					android:textStyle="bold" />

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="You can see profiles of people who liked your profile and can like back, chat with them."
					android:textColor="@color/black"
					android:textSize="12sp"
					android:layout_marginTop="4dp" />
			</LinearLayout>
		</LinearLayout>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="8dp"
			android:orientation="horizontal"
			android:gravity="center_vertical">

			<ImageView
				android:layout_width="45dp"
				android:layout_height="45dp"
				android:layout_margin="5dp"
				android:src="@drawable/gallerys" />

			<LinearLayout
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:orientation="vertical">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Add Images"
					android:textColor="@color/black"
					android:textSize="16sp"
					android:textStyle="bold" />

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="You can add more images to your profile that attracts more people."
					android:textColor="@color/black"
					android:textSize="12sp"
					android:layout_marginTop="4dp" />
			</LinearLayout>
		</LinearLayout>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="8dp"
			android:orientation="horizontal"
			android:gravity="center_vertical">

			<ImageView
				android:layout_width="45dp"
				android:layout_height="45dp"
				android:layout_margin="5dp"
				android:src="@drawable/eye" />

			<LinearLayout
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:orientation="vertical">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Get Visited Profiles"
					android:textColor="@color/black"
					android:textSize="16sp"
					android:textStyle="bold" />

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="You can see profiles of people who visited your profile and can like back, chat with them."
					android:textColor="@color/black"
					android:textSize="12sp"
					android:layout_marginTop="4dp" />
			</LinearLayout>
		</LinearLayout>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="8dp"
			android:orientation="horizontal"
			android:gravity="center_vertical">

			<ImageView
				android:layout_width="45dp"
				android:layout_height="45dp"
				android:layout_margin="5dp"
				android:src="@drawable/disliked" />

			<LinearLayout
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:orientation="vertical">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Get Disliked Profiles"
					android:textColor="@color/black"
					android:textSize="16sp"
					android:textStyle="bold" />

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Retrieve and review all profiles you've disliked."
					android:textColor="@color/black"
					android:textSize="12sp"
					android:layout_marginTop="4dp" />
			</LinearLayout>
		</LinearLayout>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="8dp"
			android:orientation="horizontal"
			android:gravity="center_vertical">

			<ImageView
				android:layout_width="45dp"
				android:layout_height="45dp"
				android:layout_margin="5dp"
				android:src="@drawable/verified" />

			<LinearLayout
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:orientation="vertical">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Verify Profile"
					android:textColor="@color/black"
					android:textSize="16sp"
					android:textStyle="bold" />

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Get a verification badge on your profile to increase trust."
					android:textColor="@color/black"
					android:textSize="12sp"
					android:layout_marginTop="4dp" />
			</LinearLayout>
		</LinearLayout>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="8dp"
			android:orientation="horizontal"
			android:gravity="center_vertical">

			<ImageView
				android:layout_width="45dp"
				android:layout_height="45dp"
				android:layout_margin="05dp"
				android:layout_marginStart="05dp"
				android:src="@drawable/a" />

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginStart="03dp"
				android:orientation="vertical">

				<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text="Get VoiceCall feature"
					android:textColor="@color/black"
					android:textSize="16sp"
					android:textStyle="bold" />

				<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text="you can make voice calls to other users.\nNote:charges applied"
					android:textColor="@color/black"
					android:textSize="12sp"
					android:textStyle="normal" />
			</LinearLayout>
		</LinearLayout>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="8dp"
			android:orientation="horizontal"
			android:gravity="center_vertical">

			<ImageView
				android:layout_width="45dp"
				android:layout_height="45dp"
				android:layout_margin="05dp"
				android:layout_marginStart="05dp"
				android:src="@drawable/v" />

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginStart="03dp"
				android:orientation="vertical">

				<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text="Get VideoCall feature"
					android:textColor="@color/black"
					android:textSize="16sp"
					android:textStyle="bold" />

				<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text="you can make Video calls to other users.\nNote:charges applied"
					android:textColor="@color/black"
					android:textSize="12sp"
					android:textStyle="normal" />
			</LinearLayout>
		</LinearLayout>
		</LinearLayout>
	</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
